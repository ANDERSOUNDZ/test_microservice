{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "users_route": {
        "ClusterId": "users_cluster",
        "Match": {
          "Path": "/api/users-service/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/users-service" }
        ]
      },
      "items_route": {
        "ClusterId": "items_cluster",
        "Match": {
          "Path": "/api/items-service/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/items-service" }
        ]
      }
    },
    "Clusters": {
      "users_cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://user_api:8080"
          }
        }
      },
      "items_cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://item_api:8080"
          }
        }
      }
    }
  }
}